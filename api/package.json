{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "./startup.sh",
    "test": "NODE_ENV=test jest --coverage --forceExit",
    "build": "sed -i.bak 's/{{MONGO_URL}}/'$prodMongoUrl'/g' app.yaml && sed -i.bak 's/{{CORS_DOMAIN}}/'$corsDomain'/g' app.yaml && sed -i.bak 's/{{COOKIE_SIGNING_KEY}}/'$cookieSigningKey'/g' app.yaml && sed -i.bak 's/{{RECAPTCHA_SECRET_KEY}}/'$recaptchaSecretKey'/g' app.yaml"
  },
  "dependencies": {
    "api-error-handler": "^1.0.0",
    "body-parser": "~1.18.2",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "cookie-session": "^1.3.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "mongoose": "^5.7.5",
    "morgan": "~1.9.0",
    "nodemon": "1.19.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "moxios": "^0.4.0",
    "prettier": "1.18.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!/coverage/",
      "!<rootDir>/node_modules/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
